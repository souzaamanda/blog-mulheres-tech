<%- include('../common/header')  %>
<%- include('../common/menu')  %>

<main class="form-signin">
    <form action="/admin/authenticate" method="POST">

        <img src="/app/public/img/login.png" alt="login" class="mb-4 login">

        <h1 class="h3 mb-3 fw-normal text-center">Área de login</h1>
        
        <div class="form-floating">
            <input id="email" name="email" placeholder="name@example.com" autocomplete="off" type="email" class="form-control" required>
            <label for="email">Usuário</label>
        </div>
        <div class="form-floating">
            <input id="password" name="password" placeholder="Senha" autocomplete="off" type="password" class="form-control" required>
            <label for="password">Senha</label>
        </div>

        <div class="checkbox mb-3 mt-2 text-center">
           <label>
               <input type="checkbox" value="remember-me"> Mantenha-me logado
           </label> 
        </div>

        <button type="submit" class="btn botao btn-lg w-100">Entrar</button>
        <p class="mt-3 mb-3 text-muted text-center">© 2022</p>
    </form>
</main>

<%- include('../common/footer')  %>